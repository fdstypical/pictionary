@require '~@/assets/stylus/mixins/mixins';

.line-width-btn {
  box-shadow: none;
  text-decoration: none;
  border: 2px solid transparent;
  padding: 0px;
  background: transparent;
  circle(35px);
  flexy(center, center);
  cursor: pointer;

  &__inner {
    border-radius: 50%;
    background-color: #000;
  }
  
  &--active {
    border-color: #000;
  }
}