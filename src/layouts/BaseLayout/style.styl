@require '~@/assets/stylus/mixins/mixins';

.base-layout {
  width: 100%;
  height: 100vh;
  overflow-x: hidden;
  flexy(flex-start, flex-start);

  &__layout {
    height: 100%;
    padding-left: 20px;
    padding-right: 20px;
    width: 100%;
  }

  &__main {
    padding-top: 25px;
    padding-bottom: 25px;
    flexy(center, center);
  }

  &__content {
    width: 100%;
  }

  &__sidebar {
    height: 100%;
    transition: width 0.3s ease;
  }
}